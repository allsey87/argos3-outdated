<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="10" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <!-- ***************************************************** -->
    <!-- * This is the Lua controller to associate to robots * -->
    <!-- ***************************************************** -->
    <lua_controller id="lua">
      <!-- Normal actuator/sensor configuration follows -->
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
      </sensors>
      <!-- No required configuration -->
      <params />
      <!-- Optionally, you can pass a script as a controller parameter:
           <params script="../../src/testing/experiment/test_script.lua" /> -->
    </lua_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="5, 5, 1">
    <!--box id="bn" position="2.5,0,0"  orientation="0,0,0" size="0.1, 5, 0.2" movable="false" />
    <box id="bs" position="-2.5,0,0" orientation="0,0,0" size="0.1, 5, 0.2" movable="false" />
    <box id="be" position="0,-2.5,0" orientation="0,0,0" size="5, 0.1, 0.2" movable="false" />
    <box id="bw" position="0,2.5,0"  orientation="0,0,0" size="5, 0.1, 0.2" movable="false" /-->
        
    <!--distribute>
      <position method="uniform" min="-0.5,-0.5,0.5" max="0.5,0.5,1.5" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,360,360" />
      <entity quantity="1" max_trials="100">
        <box id="box_d" size="0.1, 0.1, 0.1" movable="true" mass="0.5" />
      </entity>
    </distribute-->
    
    <!--box id="box_p" position="2,2,0.2" orientation="0,0,90" size="0.1, 0.1, 0.1" movable="true" mass="0.5" /-->
    
    <box id="box_n" position="0,0,0.1" orientation="0,0,0" size="0.5, 0.5, 0.5" movable="true" mass="1.5"/>
    
    <foot-bot id="fb1" position="1,2,2" orientation="0,0,0" controller="lua"/>
    <!--foot-bot id="fb2" position="1,1,0.2" orientation="0,0,0" controller="lua"/-->

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="240">
      <floor id="f0"/>
    </dynamics3d>
  </physics_engines>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="true">
       <camera>
           <placement idx="0" position=" 0,-4, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
           <placement idx="1" position=" 4,-4, 1.5" look_at="2,-2,1" lens_focal_length="30" />
           <placement idx="2" position=" 4, 0, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
           <placement idx="3" position=" 4, 4, 1.5" look_at="2,2,1" lens_focal_length="30" />
           <placement idx="4" position=" 0, 4, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
           <placement idx="5" position="-4, 4, 1.5" look_at="-2,2,1" lens_focal_length="30" />
           <placement idx="6" position="-4, 0, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
           <placement idx="7" position="-4,-4, 1.5" look_at="-2,-2,1" lens_focal_length="30" />
