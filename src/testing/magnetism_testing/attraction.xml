            <coordinates/>
            <offset/>
         </body>
       </bodies>
      <devices>
        <electromagnets>
           <electromagnet body="base" passive_field="100,0,0"/>
        </electromagnets>
      </devices>
   </prototype>

  </arena>
  
  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media/>
  
  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
