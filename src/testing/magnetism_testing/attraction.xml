  <!-- ************************* -->
  <framework>
    <!--experiment threads="2" length="0" ticks_per_second="100" /-->
    <experiment threads="1" length="0" ticks_per_second="500" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers/>
   
  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10, 10, 1" positional_index="grid" positional_grid_size="25,25,1">
 
    <prototype id="magnet_test_box_a">
      <body position="0.01,0.0,0.0"  orientation="45,0,0"/>
       <bodies reference_body="base">
         <body id="base" geometry="box" size="0.010,0.010,0.010" mass="0.025">
            <coordinates/>
            <offset/>
         </body>
       </bodies>
      <devices>
        <electromagnets>
           <electromagnet body="base" passive_field="100,0,0"/>
        </electromagnets>
      </devices>
   </prototype>

