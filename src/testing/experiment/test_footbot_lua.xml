<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="10" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <!-- ***************************************************** -->
    <!-- * This is the Lua controller to associate to robots * -->
    <!-- ***************************************************** -->
    <lua_controller id="lua">
      <!-- Normal actuator/sensor configuration follows -->
      <actuators>
        <differential_steering implementation="default" />
        <!-- leds implementation="default" / -->
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
        <!-- light implementation="default" show_rays="false" / -->
      </sensors>
      <!-- No required configuration -->
      <params />
      <!-- Optionally, you can pass a script as a controller parameter:
           <params script="../../src/testing/experiment/test_script.lua" /> -->
    </lua_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 1">
    <box id="bn" position="1,0,0"  orientation="0,0,0" size="0.1, 2, 0.2" movable="false" />
    <box id="bs" position="-1,0,0" orientation="0,0,0" size="0.1, 2, 0.2" movable="false" />
    <box id="be" position="0,-1,0" orientation="0,0,0" size="2, 0.1, 0.2" movable="false" />
    <box id="bw" position="0,1,0"  orientation="0,0,0" size="2, 0.1, 0.2" movable="false" />

    <light id="l0"
           position="1,1,1"
           orientation="0,0,0"
           color="yellow"
           intensity="1" />

    <!-- distribute>
      <position method="uniform" min="-1,-1,0" max="1,1,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="1" max_trials="100">
        <foot-bot id="fb"
                  controller="lua" />
      </entity>
    </distribute -->
    <foot-bot id="fb0" position="0,0,0" orientation="0,0,0" controller="lua" />
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>

    <!-- ************************************************************************ -->
    <!-- * To activate the Lua editor, just use the 'lua_editor' flag attribute * -->
    <!-- ************************************************************************ -->
    <qt-opengl lua_editor="true">
      <camera>
        <placement idx="0" position="-2,0,2" look_at="0,0,0" lens_focal_length="20" />
        <placement idx="1" position="0.884183,0.359128,0.490269" look_at="0.924486,-0.486744,-0.0415919" lens_focal_length="20" />
      </camera>
    </qt-opengl>

  </visualization>

</argos-configuration>
