<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment threads="2000" length="0" ticks_per_second="10" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <test_footbot_controller id="x">
      <actuators>
        <differential_steering implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
      </sensors>
      <params />
    </test_footbot_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="20, 20, 1">
    <box id="bn" position="10,0,0"  orientation="0,0,0" size="0.1, 20, 0.2" movable="false" />
    <box id="bs" position="-10,0,0" orientation="0,0,0" size="0.1, 20, 0.2" movable="false" />
    <box id="be" position="0,-10,0" orientation="0,0,0" size="20, 0.1, 0.2" movable="false" />
    <box id="bw" position="0,10,0"  orientation="0,0,0" size="20, 0.1, 0.2" movable="false" />

    <light id="l0"
           position="1,1,1"
           orientation="0,0,0"
           color="yellow"
           intensity="1" />

    <distribute>
      <position method="uniform" min="-10,-10,0" max="10,10,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="2000" max_trials="100">
        <foot-bot id="fb"
                  controller="x" />
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl />
  </visualization>

</argos-configuration>
