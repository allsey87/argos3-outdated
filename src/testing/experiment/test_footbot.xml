<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="10" />
    <system threads="10" />>
  </framework>
  
  <loop_functions label="test_lf" />

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <test_footbot_controller id="x">
      <actuators>
        <differential_steering implementation="default" />
        <range_and_bearing implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
        <range_and_bearing implementation="default" />
      </sensors>
      <params />
    </test_footbot_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="20, 20, 1">
    <box id="bn" size="0.1, 20, 0.2" movable="false" >
      <body position="10,0,0" orientation="0,0,0"/>
    </box>
    
    <box id="bs" size="0.1, 20, 0.2" movable="false">
      <body position="-10,0,0" orientation="0,0,0"/>
    </box>
    
    <box id="be" size="20, 0.1, 0.2" movable="false">
       <body position="0,-10,0" orientation="0,0,0"/>
    </box>
    
    <box id="bw" size="20, 0.1, 0.2" movable="false">
       <body position="0,10,0"  orientation="0,0,0" />
    </box>

    <light id="l0"
           position="1,1,1"
           orientation="0,0,0"
           color="yellow"
           intensity="1" />

      <foot-bot id="fb">
         <body position="0,0,0" orientation="0,0,0"/>
         <controller controller="x"/>
      </foot-bot>
        
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl />
  </visualization>

</argos-configuration>
