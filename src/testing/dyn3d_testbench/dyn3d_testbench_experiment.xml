    <prototype id="robot">
      <body position="-1,-1,0" orientation="0,0,0" />
      <controller config="joint_luacontroller"/>
      <bodies reference_body="base">
        <body id="base" geometry="cylinder" radius="0.15" height="0.05" mass="10">
          <coordinates/>
          <offset position="0,0,0" orientation="0,0,0"/>
        </body>
        <body id="link_0" geometry="cylinder" radius="0.025" height="0.4" mass="0.5">
          <coordinates/>
          <offset position="0,0,0.05" orientation="0,0,0"/>
        </body>
        <body id="link_1" geometry="cylinder" radius="0.025" height="0.2" mass="0.5">
          <coordinates/>
          <offset position="0.05,0,0.4" orientation="0,0,0"/>
        </body>
        <body id="link_2" geometry="cylinder" radius="0.025" height="0.2" mass="0.5">
          <coordinates/>
          <offset position="-0.05,0,0.4" orientation="0,0,0"/>
        </body>
      </bodies>
      <joints>
        <joint id="joint_0" disable_collisions="false" sensor="enabled" actuator="enabled">
          <frames>
            <frame body="base" position="0,0, 0.05" orientation="0,0,0"/>
            <frame body="link_0" position="0,0,0" orientation="0,0,0"/>
          </frames>
        </joint>
        <joint id="joint_1" disable_collisions="true" sensor="enabled" actuator="enabled">
          <frames>
            <frame body="link_0" position="0.05,0,0.35" orientation="0,0,0"/>
            <frame body="link_1" position="0,0,0" orientation="0,0,0"/>
          </frames>
          <axes>
            <axis direction="x" mode="angular" range="unconstrained">
              <actuator enabled="true" force="5" target_velocity="0"/>
            </axis>
          </axes>
        </joint>
        <joint id="joint_2" disable_collisions="true" sensor="enabled" actuator="enabled">
          <frames>
            <frame body="link_0" position="-0.05,0,0.35" orientation="0,0,0"/>
            <frame body="link_2" position="0,0,0" orientation="0,0,0"/>
          </frames>
          <axes>
            <axis direction="x" mode="angular" range="unconstrained">
              <actuator enabled="true" force="5" target_velocity="0"/>
            </axis>
          </axes>
        </joint>
      </joints>
      <devices>
        <proximity_sensors>
          <sensor body="link_1" offset="0,0,0.2" direction="1,0,0" range="0.35" />
          <sensor body="link_2" offset="0,0,0.2" direction="1,0,0" range="0.35" />
        </proximity_sensors>
        <!--joint_actuators/>
