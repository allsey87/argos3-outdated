<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment threads="2" length="0" ticks_per_second="100" />
  </framework>

   <!--loop_functions label="dyn3d_testbench_loop_functions" /-->

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
   
    <proximity_joints_controller id="joint_cppcontroller">
      <actuators>
        <joints implementation="default" />
      </actuators>
      <sensors>
         <joints implementation="default" />
      </sensors>   
      <params />
    </proximity_joints_controller>

    <lua_controller id="joint_luacontroller">
      <actuators>
        <joints implementation="default" />
      </actuators>
      <sensors>
         <joints implementation="default" />
         <prototype_proximity implementation="default" target="bodies.body[body_2].proximity_sensors" show_rays="true"/>
         <!--robot_proximity implementation="default" target="bodies.body[body_1].proximity_sensors" show_rays="true"/-->
      </sensors>   
      <params/>
    </lua_controller>
    
    <lua_controller id="fb_lua">
      <!-- Normal actuator/sensor configuration follows -->
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
      </sensors>
      <!--params script="../../src/testing/experiment/test_script.lua" /-->
      <params script="src/testing/experiment/test_script.lua" />
      <!--params/-->
    </lua_controller>
    
  </controllers>
  
  
  

