<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment threads="2" length="0" ticks_per_second="100" />
  </framework>

   <!--loop_functions label="dyn3d_testbench_loop_functions" /-->

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>


    <!--lua_controller id="r_lua">
      <actuators/>
      <sensors/>
      <params/>
    </lua_controller-->
    
    <lua_controller id="fb_lua">
      <!-- Normal actuator/sensor configuration follows -->
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="true" />
      </sensors>
      <!--params script="../../src/testing/experiment/test_script.lua" /-->
      <params script="src/testing/experiment/test_script.lua" />
      <!--params/-->
    </lua_controller>
    
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10, 10, 1">
    <!-- floor id="f" source="loop_functions" pixels_per_meter="100" / -->

    <box id="bn" position="2.5,0,0"  orientation="0,0,0" size="0.1, 5, 0.2" movable="false" mass="1" />
    <box id="bs" position="-2.5,0,0" orientation="0,0,0" size="0.1, 5, 0.2" movable="false" mass="1" />
    <box id="be" position="0,-2.5,0" orientation="0,0,0" size="5, 0.1, 0.2" movable="false" mass="1" />
    <box id="bw" position="0,2.5,0"  orientation="0,0,0" size="5, 0.1, 0.2" movable="false" mass="1" />

    <robot id="robotic-arm" position="0,0,0" orientation="0,0,0" controller="r_lua">
      <bodies reference_body="robotic-arm.bodies.body[0]">
         <body id="body[0]" geometry="box" size="0.3,0.3,0.05" mass="1">
            <offset position="0,0,0" orientation="0,0,0"/>
         </body>
         <body id="body[1]" geometry="box" size="0.05,0.05,0.4" mass="1">
            <offset position="0,0,0.05" orientation="0,0,0"/>
         </body>
         <body id="body[2]" geometry="box" size="0.05,0.05,0.4" mass="1">
            <offset position="0,0,0.45" orientation="0,0,0"/>
         </body>
      </bodies>
      <joints>
         <joint id="joint[0]" type="rotary" disable_collisions="true" sensor="enabled" actuator="enabled">
            <body id="body[0]" rotation_axis="0,1,0" rotation_point="0,0,0.35"/>
            <body id="body[1]" rotation_axis="0,1,0" rotation_point="0,0,0.05"/>
         </joint>
         <joint id="joint[1]" type="rotary" disable_collisions="true" sensor="enabled" actuator="enabled">
            <body id="body[1]" rotation_axis="0,1,0" rotation_point="0,0,0.35"/>
            <body id="body[2]" rotation_axis="0,1,0" rotation_point="0,0,0.05"/>
         </joint>
      </joints>
    </robot>
    
    <robot id="table" position="-1.5,-1.5,0" orientation="0,0,0" controller="r_lua">
      <bodies reference_body="table.bodies.body[4]">
         <body id="body[0]" geometry="box" size="0.05,0.05,0.2" mass="1">
            <offset position="0.2,0.2,0" orientation="0,0,0"/>
         </body>
         <body id="body[1]" geometry="box" size="0.05,0.05,0.2" mass="1">
            <offset position="-0.2,0.2,0" orientation="0,0,0"/>
         </body>
         <body id="body[3]" geometry="box" size="0.05,0.05,0.2" mass="1">
            <offset position="0.2,-0.2,0" orientation="0,0,0"/>
         </body>
         <body id="body[2]" geometry="box" size="0.05,0.05,0.2" mass="1">
            <offset position="-0.2,-0.2,0" orientation="0,0,0"/>
         </body>
         <body id="body[4]" geometry="box" size="0.6,0.6,0.05" mass="10">
            <offset position="0,0,0.2" orientation="0,0,0"/>
         </body>
      </bodies>
      <joints/>
    </robot>
    
    <foot-bot id="fb1" position="-1.5,-1.5,0.25" orientation="0,0,0" controller="fb_lua"/>
    <foot-bot id="fb2" position="-2,-2,0" orientation="0,0,0" controller="fb_lua"/>
    <!--foot-bot id="fb3" position="-1.8,-2,0" orientation="0,0,0" controller="fb_lua"/-->
    
    <!--box id="test_box2" position="-2,-2.2,0.2"  orientation="0,45,0" size="0.1, 0.1, 0.1" movable="true" mass="1" /-->

    <!--box id="test_box" position="0.01,-0.01,1"  orientation="0,0,0" size="0.1, 0.1, 0.1" movable="true" mass="1" /-->
    
  </arena>
  
  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="15">
      <floor/>
    </dynamics3d>
  </physics_engines>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>

    <!-- ************************************************************************ -->
    <!-- * To activate the Lua editor, just use the 'lua_editor' flag attribute * -->
    <!-- ************************************************************************ -->
    <qt-opengl lua_editor="true">
      <camera>
        <placement idx="0" position=" 0,-4, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
        <placement idx="1" position=" 4,-4, 1.5" look_at="2,-2,1" lens_focal_length="30" />
        <placement idx="2" position=" 4, 0, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
        <placement idx="3" position=" 4, 4, 1.5" look_at="2,2,1" lens_focal_length="30" />
        <placement idx="4" position=" 0, 4, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
        <placement idx="5" position="-4, 4, 1.5" look_at="-2,2,1" lens_focal_length="30" />
        <placement idx="6" position="-4, 0, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
        <placement idx="7" position="-4,-4, 1.5" look_at="-2,-2,1" lens_focal_length="30" />
      </camera>
    </qt-opengl>

  </visualization>

</argos-configuration>
