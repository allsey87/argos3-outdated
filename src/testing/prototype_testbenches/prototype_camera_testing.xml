  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    
    <lua_controller id="robot_prototype_lua">
      <actuators>
        <pleds implementation="default" medium="leds"/>
        <joints implementation="default" />
      </actuators>
      <sensors>
         <joints implementation="default" />
         <prototype_colored_blob_forwards_camera implementation="default" show_rays="true" medium="leds" />
      </sensors>
      <params/>
    </lua_controller>
    
    <lua_controller id="wall_prototype_lua">
      <actuators>
        <pleds implementation="default" medium="leds"/>
      </actuators>
      <sensors/>
      <params/>
    </lua_controller>

    
    <lua_controller id="fb_lua">
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" medium="leds"/>
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" show_rays="false" />
        <colored_blob_omnidirectional_camera implementation="rot_z_only" show_rays="true" medium="leds" />
      </sensors>
      <!--params script="src/testing/experiment/test_script.lua" /-->
      <params/>
    </lua_controller>
    
  </controllers>
  
  
  
  
