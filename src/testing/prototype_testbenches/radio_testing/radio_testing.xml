<?xml version="1.0" ?>
<argos-configuration>
  
  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment threads="2" length="0" ticks_per_second="20" />
  </framework>

  <!--loop_functions label="dyn3d_testbench_loop_functions" /-->

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    
    <lua_controller id="robot_prototype_lua">
      <actuators>
        <pleds implementation="default" medium="leds"/>
        <joints implementation="default" target="joint_0(angular:x)"/>
        <!--electromagnets implementation="default" show_poles="true" target="magnet-ne,magnet-nw,magnet-se,magnet-sw"/-->
      </actuators>
      <sensors>
        <joints implementation="default" />
        <prototype_proximity implementation="default" show_rays="true"/>
        <!--prototype_forwards_camera implementation="default" show_rays="true" medium="leds" /-->
      </sensors>
      <params/>
      <!--params script="src/testing/prototype_testbenches/prototype_camera_calibration.lua"/-->
      <!--params script="../../src/testing/prototype_testbenches/prototype_camera_testing.lua"/-->
    </lua_controller>

    <lua_controller id="smartblock_prototype_lua">
      <actuators>
        <pleds implementation="default" medium="leds"/>
        <radios implementation="default" medium="nfc"/>
      </actuators>
      <sensors>
        <radios implementation="default" medium="nfc"/>
      </sensors>
      <params/>
      <!--params script="src/testing/prototype_testbenches/prototype_camera_calibration.lua"/-->
      <!--params script="../../src/testing/prototype_testbenches/prototype_camera_testing.lua"/-->
    </lua_controller>

    
  </controllers>
  
  
  
  
  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10, 10, 5" positional_index="grid" positional_grid_size="25,25,10">
    <!-- floor id="f" source="loop_functions" pixels_per_meter="100" / -->
    
    <box id="bn" size="0.1, 5, 0.2" movable="false" mass="1">
      <body position="2.5,0,0"  orientation="0,0,0"/>
    </box>
    <box id="bs" size="0.1, 5, 0.2" movable="false" mass="1">
      <body position="-2.5,0,0" orientation="0,0,0"/>
    </box>
    <box id="be" size="5, 0.1, 0.2" movable="false" mass="1">
      <body position="0,-2.5,0" orientation="0,0,0"/>
    </box>
    <box id="bw" size="5, 0.1, 0.2" movable="false" mass="1">
      <body position="0,2.5,0"  orientation="0,0,0"/>
    </box>
    
    <distribute>
      <position method="grid" center="0,0,0" distances="0.1,0.1,1" layout="4,1,1" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="4" max_trials="4" base_num="2">
        <prototype id="smartblock">
          <controller config="smartblock_prototype_lua"/>
          <body position="1,0,0.5" orientation="0,0,0"/>
          <bodies reference_body="block">
            <body id="block" geometry="box" size="0.07, 0.07, 0.07" mass="0.3">
              <coordinates/>
              <offset/>
            </body>
          </bodies>
          <devices>
            <barcodes>
              <barcode id="top"    body="block" localizable="true" position=" 0.000, 0.000, 0.071" orientation="0,0,0"   payload="" side_length="0.035"/>
              <barcode id="north"  body="block" localizable="true" position=" 0.036, 0.000, 0.035" orientation="0,90,0"  payload="" side_length="0.035"/>
              <barcode id="east"   body="block" localizable="true" position=" 0.000,-0.036, 0.035" orientation="0,0,90"  payload="" side_length="0.035"/>
              <barcode id="south"  body="block" localizable="true" position="-0.036, 0.000, 0.035" orientation="0,-90,0" payload="" side_length="0.035"/>
              <barcode id="west"   body="block" localizable="true" position=" 0.000, 0.036, 0.035" orientation="0,0,-90" payload="" side_length="0.035"/>
              <barcode id="bottom" body="block" localizable="true" position=" 0.000, 0.000,-0.001" orientation="0,0,180" payload="" side_length="0.035"/>
            </barcodes>
            <leds>
              <led id="top_a"    body="block" position=" 0.000, 0.025, 0.071" color="blue"/>
              <led id="top_b"    body="block" position=" 0.025, 0.000, 0.071" color="blue"/>
              <led id="top_c"    body="block" position=" 0.000,-0.025, 0.071" color="blue"/>
              <led id="top_d"    body="block" position="-0.025, 0.000, 0.071" color="blue"/>
              <led id="north_a"  body="block" position=" 0.036, 0.000, 0.060" color="red"/>
              <led id="north_b"  body="block" position=" 0.036, 0.025, 0.035" color="red"/>
              <led id="north_c"  body="block" position=" 0.036, 0.000, 0.010" color="red"/>
              <led id="north_d"  body="block" position=" 0.036,-0.025, 0.035" color="red"/>
              <led id="east_a"   body="block" position=" 0.000,-0.036, 0.060" color="blue"/>
              <led id="east_b"   body="block" position=" 0.025,-0.036, 0.035" color="blue"/>
              <led id="east_c"   body="block" position=" 0.000,-0.036, 0.010" color="blue"/>
              <led id="east_d"   body="block" position="-0.025,-0.036, 0.035" color="blue"/>
              <led id="south_a"  body="block" position="-0.036, 0.000, 0.060" color="red"/>
              <led id="south_b"  body="block" position="-0.036,-0.025, 0.035" color="red"/>
              <led id="south_c"  body="block" position="-0.036, 0.000, 0.010" color="red"/>
              <led id="south_d"  body="block" position="-0.036, 0.025, 0.035" color="red"/>
              <led id="west_a"   body="block" position=" 0.000, 0.036, 0.060" color="blue"/>
              <led id="west_b"   body="block" position="-0.025, 0.036, 0.035" color="blue"/>
              <led id="west_c"   body="block" position=" 0.000, 0.036, 0.010" color="blue"/>
              <led id="west_d"   body="block" position=" 0.025, 0.036, 0.035" color="blue"/>
              <led id="bottom_a" body="block" position=" 0.000, 0.025,-0.001" color="red"/>
              <led id="bottom_b" body="block" position=" 0.025, 0.000,-0.001" color="red"/>
              <led id="bottom_c" body="block" position=" 0.000,-0.025,-0.001" color="red"/>
              <led id="bottom_d" body="block" position="-0.025, 0.000,-0.001" color="red"/>
            </leds>
            <radios>
              <radio id="top" body="block" medium="nfc" position="0.000, 0.000, 0.070" orientation="0,0,0" range="0.12"/>
            </radios>
          </devices>
        </prototype>
      </entity>
    </distribute>
    
  </arena>
  
  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <!--range_and_bearing id="rab" index="grid" grid_size="3,3,3" /-->
    <led id="leds" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
  </media>
  
  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="25">
      <floor/>
      <plugins>
        <!--antigravity force="0,0,10"/-->
        <!--magnetism/-->
      </plugins>
    </dynamics3d>
  </physics_engines>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>

    <!-- ************************************************************************ -->
    <!-- * To activate the Lua editor, just use the 'lua_editor' flag attribute * -->
    <!-- ************************************************************************ -->
    <qt-opengl lua_editor="true">
      <!--user_functions label="prototype_camera_user_functions" library="build/testing/prototype_testbenches/qt_camera_visualisation/libprototype_camera_loop_functions.so"/-->
      <camera>
        <placement idx="0" position="-0.0728937,0.225114,0.213558" look_at="0.0967064,-0.598809,-0.327171" lens_focal_length="20" />
        <!--placement idx="0" position=" 0, 0, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" /-->
        <placement idx="1" position=" 0, 0, 0.75" look_at="0.2,0,0.75" lens_focal_length="10" />
        <placement idx="2" position=" 0, 0, 0.75" look_at="-0.2,0,0.75" lens_focal_length="10" />
        <placement idx="3" position=" 4, 4, 1.5" look_at="2,2,1" lens_focal_length="30" />
        <placement idx="4" position=" 0, 4, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
        <placement idx="5" position="-4, 4, 1.5" look_at="-2,2,1" lens_focal_length="30" />
        <placement idx="6" position="-4, 0, 1.5" look_at="0.01,0.01,0.01" lens_focal_length="20" />
        <placement idx="7" position="0.449984,1.09151,1.44008" look_at="0.0240149,0.441588,0.810667" lens_focal_length="20" />
      </camera>
    </qt-opengl>

  </visualization>

</argos-configuration>
